<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/trainingName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Entrenamiento"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/trainingDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha: 01-01-2024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trainingName" />

    <TextView
        android:id="@+id/trainingLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nivel: BÃ¡sico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/trainingDate" />

</androidx.constraintlayout.widget.ConstraintLayout>
