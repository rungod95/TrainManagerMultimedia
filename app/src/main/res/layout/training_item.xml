<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Nombre del entrenamiento -->
    <TextView
        android:id="@+id/tv_training_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nombre del Entrenamiento"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Fecha del entrenamiento -->
    <TextView
        android:id="@+id/tv_training_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fecha del Entrenamiento"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_training_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/trainingLevel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nivel: BÃ¡sico"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_training_date" />

</androidx.constraintlayout.widget.ConstraintLayout>
