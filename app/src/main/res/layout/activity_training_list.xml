<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.TrainingListView">

    <!-- Barra de acci칩n personalizada -->
    <include
        android:id="@+id/action_bar"
        layout="@menu/action_bar"
        app:title="Lista de Entrenamientos" />

    <!-- Lista de entrenamientos -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trainingRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/action_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/training_item" />

    <!-- Bot칩n flotante para a침adir nuevos entrenamientos -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addTrainingFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="A침adir Entrenamiento"
        android:src="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
